<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" 
            content="width=device-width, 
            initial-scale=1">
        <title>This is the page title</title>
        <button id="start">start</button>
        <p id="count"></p>
    </head>
    <script>

        let waitTime = 30000;
        let playTime = 15000;
        let wait = 1;
        let count = 0;
        let seconds = waitTime;
        
        countMessage = document.getElementById("count");
        button = document.getElementById("start");

        button.addEventListener("click", ()=> {
            if (wait) wait = 0;
            else wait = 1;
        })
        
        while (1){
            setTimeout(()=>{
                if(wait){
                    seconds = waitTime;
                    setInterval((countMessage.textContent = count +=1), 10000);
                }
                else {
                    seconds = playTime;
                    count = 0;
                }
            }, seconds);
        }



    </script>
</html>